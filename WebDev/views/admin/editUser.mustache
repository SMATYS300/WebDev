<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
</head>
<body>
    {{> adminHeader}}
    <div class="container">
    <h1>Edit User</h1>
    {{#error}}
    <p>{{error}}</p>
    {{/error}}
    <form action="/admin/editUser/{{user._id}}" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{user.name}}" required><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{user.email}}" required><br>

        <label for="organisation">Organisation:</label>
        <input type="text" id="organisation" name="organisation" value="{{user.organisation}}"><br>

        <label for="role">Role:</label>
        <select id="role" name="role">
            <option value="admin" {{#isEqual user.role 'admin'}}selected{{/isEqual}}>Admin</option>
            <option value="pantry" {{#isEqual user.role 'pantry'}}selected{{/isEqual}}>Pantry</option>
            <option value="normalUser" {{#isEqual user.role 'normalUser'}}selected{{/isEqual}}>Normal User</option>
        </select><br>

        <button type="submit" class="button">Update User</button>
    </form>
    </div>
    {{> footer}}
</body>
</html>